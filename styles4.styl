* 
  margin 0
  padding 0
  box-sizing border-box

body
  font-family Arial, sans-serif
  line-height 1.6
  padding 20px

.center
  width 1200px
  margin 0 auto

.header
  text-align center
  border 1px solid #000

.right
  float left
  width 70%
  border 1px solid #000

.left
  float right
  width 30%
  border 1px solid #000
  padding 20px 20px

.post
  margin-bottom 20px
  overflow hidden

.post img
  float left
  width 30%
  margin-right 20px
  background-color #ccc
  height 150px

.two-images img
  float left
  width 14%
  background-color #ccc
  height 150px
  margin-right 20px

.post h2
  margin-bottom 10px

.post p
  margin-bottom 10px

.left .widget
  margin-bottom 57px

.left .widget h3
  margin-bottom 10px

.left .widget p
  margin-bottom 5px
